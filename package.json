{
  "name": "proxectos-db",
  "version": "1.0.0",
  "description": "ProxectOS API DB",
  "main": "build/index.ts",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production tsc && node build/index.js",
    "dev": "NODE_ENV=development ts-node-dev --respawn --watch ./locales --transpile-only ./src/index.ts",
    "predev": "npm run mongo-stop; npm run mongo-start",
    "postdev": "npm run mongo-stop",
    "mongo-start": "docker-compose up -d",
    "mongo-stop": "docker-compose down",
    "mongo-enter": "docker exec -ti proxectos-db mongo",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles",
    "test:watch": "npm run test -- --watch",
    "test:simple": "NODE_ENV=test jest --detectOpenHandles",
    "pretest": "npm run test:mongo-stop; npm run test:mongo-start",
    "posttest": "npm run test:mongo-stop",
    "test:mongo-start": "docker-compose -f docker-compose-test.yaml up -d",
    "test:mongo-stop": "docker-compose -f docker-compose-test.yaml down"
  },
  "author": "Fco. Javier Gonz√°lez Campos",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/mongo-highlighter": "^1.0.0",
    "@mikro-orm/mongodb": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "@mikro-orm/reflection": "^4.5.9",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-serve-static-core": "^0.1.1",
    "fast-json-patch": "^3.1.0",
    "http-status-codes": "^2.1.2",
    "i18next": "^20.6.1",
    "i18next-fs-backend": "^1.1.1",
    "i18next-http-middleware": "^3.1.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "qs": "^6.7.0",
    "query-types": "^0.1.4",
    "tsc": "^2.0.3",
    "types-json": "^1.2.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.4",
    "@types/supertest": "^2.0.11",
    "eslint": "^7.32.0",
    "jest": "^27.1.1",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.0.2"
  }
}
